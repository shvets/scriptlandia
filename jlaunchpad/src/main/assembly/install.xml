<assembly>
  <id>install</id>
  <formats>
    <format>zip</format>
  </formats>

  <fileSets>
    <fileSet>
      <includes>
        <include>*.xml</include>

        <include>config.*</include>
        <include>installer.*</include>
      </includes>
    </fileSet>

    <fileSet>
      <includes>
        <include>samples/**</include>
      </includes>
    </fileSet>

    <fileSet>
      <directory>projects</directory>
    
      <includes>
        <include>bootstrap-mini/pom.xml</include>
        <include>bootstrap-mini/target/bootstrap-mini.jar</include>

        <include>classworlds/pom.xml</include>
        <include>classworlds/target/classworlds*.jar</include>

        <include>pom-reader/pom.xml</include>
        <include>pom-reader/target/pom-reader.jar</include>

        <include>universal-launcher-common/pom.xml</include>
        <include>universal-launcher-common/target/universal-launcher-common.jar</include>

        <include>universal-launcher/pom.xml</include>
        <include>universal-launcher/target/universal-launcher.jar</include>
        <include>universal-launcher/src/main/config/*.*</include>
      </includes>
    </fileSet>
  </fileSets>

</assembly>
