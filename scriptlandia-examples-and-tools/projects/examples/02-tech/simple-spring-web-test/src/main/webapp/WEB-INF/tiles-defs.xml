<tiles-definitions>
  <definition name=".baseLayout" path="/templates/baseLayout.jsp">
    <put name="header" value='/templates/header.jsp'/>
    <put name="content" value='/templates/emptyContent.jsp'/>
    <put name="footer" value='/templates/footer.jsp'/>
  </definition>

  <definition name=".page1" extends=".baseLayout">
    <put name="content" value='/page1.jsp'/>
  </definition>

  <definition name=".page2" extends=".baseLayout">
    <put name="content" value='/page2.jsp'/>
  </definition>

  <definition name=".page3" extends=".baseLayout">
    <put name="content" value='/page3.jsp'/>
  </definition>

</tiles-definitions>
