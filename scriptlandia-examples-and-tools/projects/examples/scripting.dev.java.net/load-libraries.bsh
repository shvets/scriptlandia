// load-scripting-engines.bsh

import org.sf.scriptlandia.ScriptlandiaHelper;

String repositoryHome = System.getProperty("repository.home");

String javaVersion = System.getProperty("java.version");

if(javaVersion.startsWith("1.5")) {
  String compilerPomFileName = repositoryHome + 
    "/org/sf/scriptlandia/compiler/2.2.0/compiler-2.2.0.pom";

  String javaxScriptPomFileName = repositoryHome + 
    "/org/sf/scriptlandia/javax-script/2.2.0/javax-script-2.2.0.pom";

  ScriptlandiaHelper.addMavenDependencies(compilerPomFileName);
  ScriptlandiaHelper.addMavenDependencies(javaxScriptPomFileName);
}

String scriptingEnginesPomFileName = repositoryHome + 
    "/org/sf/scriptlandia/scripting-engines/2.2.0/scripting-engines-2.2.0.pom";

ScriptlandiaHelper.addMavenDependencies(scriptingEnginesPomFileName);
