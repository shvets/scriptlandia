// run-jruby.bsh

sourceRelative("../load-libraries.bsh");

import javax.script.*;

import org.sf.scriptlandia.ScriptlandiaHelper;


ClassLoader myloader = ScriptlandiaHelper.class.getClassLoader();

ScriptEngineManager manager = new ScriptEngineManager(myloader);


ScriptEngine jRubyEngine = manager.getEngineByName("jruby");

jRubyEngine.eval(new FileReader("scripts/HelloJRuby.rb"));

Invocable jrubyInvocable = (Invocable)jRubyEngine;

jrubyInvocable.invokeFunction("Hello", new Object[] {"World" });
