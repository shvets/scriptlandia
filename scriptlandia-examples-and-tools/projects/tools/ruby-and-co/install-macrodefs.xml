<?xml version="1.0"?>

<project name="install-macrodefs" basedir=".">

  <macrodef name="installPackage">
    <attribute name="name"/>

    <sequential>
      <exec dir="${scriptlandia.tools.home}" executable="gem.bat">
        <arg line="install -y --no-rdoc --no-ri @{name}"/>
      </exec>
    </sequential>
  </macrodef>

</project>