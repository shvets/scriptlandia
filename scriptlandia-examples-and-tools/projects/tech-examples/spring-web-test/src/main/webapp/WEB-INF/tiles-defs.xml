<?xml version="1.0" encoding="ISO-8859-1" ?>

<!DOCTYPE tiles-definitions PUBLIC "-//Apache Software Foundation//DTD Tiles Configuration 1.1//EN"
                                   "http://jakarta.apache.org/struts/dtds/tiles-config_1_1.dtd">

<tiles-definitions>
  <definition name=".baseLayout" path="/templates/baseLayout.jsp">
    <put name="header" value='/templates/header.jsp'/>
    <put name="content" value='/templates/emptyContent.jsp'/>
    <put name="footer" value='/templates/footer.jsp'/>
  </definition>

  <definition name=".baseStrutsLayout" path="/templates/baseStrutsLayout.jsp">
    <put name="header" value='/templates/header.jsp'/>
    <put name="content" value='/templates/emptyContent.jsp'/>
    <put name="footer" value='/templates/footer.jsp'/>
  </definition>

  <definition name=".testTiles" extends=".baseLayout">
    <put name="content" value='/testTilesContent.jsp'/>
  </definition>

  <definition name=".index-struts" extends=".baseStrutsLayout">
    <put name="content" value='/struts/content1.jsp'/>
  </definition>

  <definition name=".test-struts" extends=".baseStrutsLayout">
    <put name="content" value='/struts/content2.jsp'/>
  </definition>

</tiles-definitions>
