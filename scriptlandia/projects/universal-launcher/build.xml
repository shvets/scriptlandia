<?xml version="1.0"?>

<!-- build.xml -->

<project name="test" default="install" basedir=".">

  <target name="install">
    <mkdir dir="${launcher.home}"/>

    <copy todir="${launcher.home}" overwrite="true">
      <filterset>
        <filter token="java.home" value="${java.home}"/>
        <filter token="repository.home" value="${repository.home}"/>
        <filter token="launcher.home" value="${launcher.home}"/>
        <filter token="launcher.version" value="${launcher.version}"/>
        <filter token="classworlds.version" value="${classworlds.version}"/>
        <filter token="proxyHost" value="${proxyHost}"/>
        <filter token="proxyPort" value="${proxyPort}"/>
        <filter token="http.proxyHost" value="${proxyHost}"/>
        <filter token="http.proxyPort" value="${proxyPort}"/>
      </filterset>

      <fileset dir="src/main/config">
       <include name="*.*"/>
      </fileset>
    </copy>

    <copy tofile="${launcher.home}/lib/universal-launcher-with-dependencies-${launcher.version}.jar" overwrite="true">
      <fileset dir="target">
        <include name="universal-launcher-with-dependencies.jar"/>
      </fileset>
    </copy>

    <copy todir="${launcher.home}/lib" overwrite="true">
      <fileset dir="${repository.home}/classworlds/classworlds/1.1">
        <include name="**/*.jar"/>
      </fileset>
    </copy>
  </target>

</project>