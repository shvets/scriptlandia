<?xml version="1.0"?>

<project>
  <modelVersion>4.0.0</modelVersion>
  <groupId>org.sf.scriptlandia</groupId>
  <artifactId>groovy-starter</artifactId>
  <version>1.0.0</version>
  <packaging>pom</packaging>

  <name>Scriptlandia Groovy Starter Module</name>
  <description>Scriptlandia Groovy Starter Module</description>

  <dependencies>
    <dependency>
      <groupId>org.sf.scriptlandia</groupId>
      <artifactId>scriptlandia-helper</artifactId>
      <version>2.2.3</version>
    </dependency>

    <dependency>
      <groupId>org.sf.scriptlandia</groupId>
      <artifactId>groovy</artifactId>
      <version>1.0.0</version>
      <type>pom</type>
    </dependency>

    <dependency>
      <groupId>org.sf.scriptlandia</groupId>
      <artifactId>ant</artifactId>
      <version>1.0.0</version>
      <type>pom</type>
    </dependency>

    <dependency>
      <groupId>groovy</groupId>
      <artifactId>scriptom</artifactId>
      <version>1.2</version>
    </dependency>

    <dependency>
      <groupId>jacob</groupId>
      <artifactId>jacob</artifactId>
      <version>1.10.1</version>
    </dependency>
  </dependencies>

  <build>
    <plugins>
      <plugin>
        <groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-compiler-plugin</artifactId>
        <configuration>
          <source>${java.specification.version}</source>
          <target>${java.specification.version}</target>
        </configuration>
      </plugin>
    </plugins>
  </build>

</project>
