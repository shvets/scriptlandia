<?xml version="1.0"?>

<project>
  <modelVersion>4.0.0</modelVersion>
  <groupId>org.sf.scriptlandia</groupId>
  <artifactId>scriptlandia-starter</artifactId>
  <version>1.0.0</version>
  <packaging>jar</packaging>

  <name>Scriptlandia Starter Module</name>
  <description>Scriptlandia Starter Module</description>

  <properties>
    <maven.version>2.0.7</maven.version>
    <scriptlandia.version>2.2.3</scriptlandia.version>
  </properties>

  <dependencies>
    <dependency>
      <groupId>org.sf.scriptlandia</groupId>
      <artifactId>scriptlandia</artifactId>
      <version>1.0.0</version>
      <type>pom</type>
    </dependency>

    <dependency>
      <groupId>org.sf.scriptlandia</groupId>
      <artifactId>maven</artifactId>
      <version>1.0.0</version>
      <type>pom</type>
    </dependency>

    <dependency>
      <groupId>org.sf.scriptlandia</groupId>
      <artifactId>ant</artifactId>
      <version>1.0.0</version>
      <type>pom</type>
    </dependency>

    <dependency>
      <groupId>org.apache.maven</groupId>
      <artifactId>maven-ant-tasks</artifactId>
      <version>${maven.version}</version>
    </dependency>

    <dependency>
      <groupId>org.sf.scriptlandia</groupId>
      <artifactId>scriptlandia-helper</artifactId>
      <version>${scriptlandia.version}</version>
    </dependency>
  </dependencies>

  <build>
    <plugins>
      <plugin>
        <groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-compiler-plugin</artifactId>
        <configuration>
          <source>${java.specification.version}</source>
          <target>${java.specification.version}</target>
        </configuration>
      </plugin>
    </plugins>
  </build>

</project>
