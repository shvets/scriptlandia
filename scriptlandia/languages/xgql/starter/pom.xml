<?xml version="1.0"?>

<project>
  <modelVersion>4.0.0</modelVersion>
  <groupId>org.sf.scriptlandia</groupId>
  <artifactId>xgql-starter</artifactId>
  <version>2.2.2</version>
  <packaging>jar</packaging>

  <name>Scriptlandia XGQL Starter Module</name>
  <description>Scriptlandia XGQL Starter Module</description>

  <properties>
    <xgql.version>2.0</xgql.version>
  </properties>

  <dependencies>
    <dependency>
      <groupId>org.sf.scriptlandia</groupId>
      <artifactId>xgql</artifactId>
      <version>2.2.2</version>
      <type>pom</type>
    </dependency>

    <dependency>
      <groupId>org.sf.scriptlandia</groupId>
      <artifactId>scriptlandia-helper</artifactId>
      <version>2.2.2</version>
    </dependency>

    <dependency>
      <groupId>javax.servlet</groupId>
      <artifactId>servlet-api</artifactId>
      <version>2.3</version>
    </dependency>
  </dependencies>

  <build>
    <plugins>
      <plugin>
        <groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-compiler-plugin</artifactId>
        <configuration>
          <source>${java.specification.version}</source>
          <target>${java.specification.version}</target>
        </configuration>
      </plugin>
    </plugins>
  </build>

  <repositories>
    <repository>
      <id>scriptlandia-repo</id>
      <name>Scriptlandia Maven2 repository</name>
      <url>http://scriptlandia-repository.googlecode.com/svn/trunk/languages</url>
    </repository>
  </repositories>

</project>
