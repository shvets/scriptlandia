<assembly>
  <id>install</id>
  <formats>
    <format>zip</format>
  </formats>

  <fileSets>
    <fileSet>
      <includes>
        <include>config.*</include>
        <include>install.*</include>
        <include>scriptlandia.properties</include>
        <include>repositories.xml</include>
        <include>installer.exe</include>
        <include>installer.bat</include>
        <include>installer.ant</include>
        <include>config-macrodefs.xml</include>
        <include>install-macrodefs.xml</include>
        <include>docs/**</include>
      </includes>
    </fileSet>

    <fileSet>
      <directory>projects</directory>
      <outputDirectory>projects</outputDirectory>
    
      <includes>
        <include>bootstrap-mini/pom.xml</include>
        <include>bootstrap-mini/target/bootstrap-mini.jar</include>

        <include>pomreader/pom.xml</include>
        <include>pomreader/target/pomreader.jar</include>

        <include>image4j/target/image4j.jar</include>

        <include>classworlds-launcher/pom.xml</include>
        <include>classworlds-launcher/target/classworlds-launcher.jar</include>

        <include>scriptlandia-common/pom.xml</include>
        <include>scriptlandia-common/target/scriptlandia-common.jar</include>

        <include>antrun/pom.xml</include>
        <include>antrun/target/antrun.jar</include>

        <include>scriptlandia/pom.xml</include>
        <include>scriptlandia/target/scriptlandia.jar</include>

        <include>scriptlandia-launcher/pom.xml</include>
        <include>scriptlandia-launcher/target/scriptlandia-launcher.jar</include>

        <include>scriptlandia-nailgun/pom.xml</include>
        <include>scriptlandia-nailgun/target/scriptlandia-nailgun.jar</include>

        <include>scriptlandia-startup/pom.xml</include>

        <include>scriptlandia-installer/pom.xml</include>
        <include>scriptlandia-installer/target/scriptlandia-installer.jar</include>

        <include>scriptlandia-config/pom.xml</include>
        <include>scriptlandia-config/bin/*.*</include>
        <include>scriptlandia-config/bin/images/*.*</include>
        <include>scriptlandia-config/src/main/bsh/**</include>
        <include>scriptlandia-config/src/main/config/**</include>
        <include>scriptlandia-config/components/**</include>
        <include>scriptlandia-config/starters/**</include>
      </includes>
    </fileSet>

    <fileSet>
      <directory>languages</directory>
      <outputDirectory>languages</outputDirectory>

      <includes>
        <include>**/pom.xml</include>
        <include>**/language.xml</include>
        <include>**/*.ico</include>
        <include>**/target/*.jar</include>
      </includes>

      <excludes>
        <exclude>**/target/classes/**</exclude>
      </excludes>
    </fileSet>

  </fileSets>

</assembly>
