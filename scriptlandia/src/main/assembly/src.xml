<assembly>
  <id>src</id>
  <formats>
    <format>zip</format>
  </formats>

  <fileSets>
    <fileSet>
      <includes>
        <include>*.bat</include>
        <include>*.ant</include>
        <include>*.bsh</include>
        <include>*.sh</include>
        <include>*.xml</include>
        <include>*.properties</include>
        <include>*.jsmooth</include>
        <include>scriptlandia.jsmooth</include>
        <include>scriptlandia.classpath</include>
        <include>*.txt</include>
        <include>*.exe</include>

        <include>*.ipr</include>
        <include>*.iws</include>
        <include>*.iml</include>

        <include>docs/**</include>
        <include>src/**</include>
        <include>user/**</include>
      </includes>
    </fileSet>

    <fileSet>
      <directory>projects</directory>
      <outputDirectory>projects</outputDirectory>
    
      <includes>
        <include>antrun/pom.xml</include>
        <include>antrun/src/**</include>

        <include>scriptlandia-startup/pom.*</include>

        <include>scriptlandia-installer/pom.xml</include>
        <include>scriptlandia-installer/src/**</include>

        <include>scriptlandia-config/bin/**</include>
        <include>scriptlandia-config/components/**</include>
        <include>scriptlandia-config/starters/**</include>
        <include>scriptlandia-config/src/**</include>
        <include>scriptlandia-config/pom.xml</include>

        <include>scriptlandia/pom.xml</include>
        <include>scriptlandia/src/**</include>

        <include>scriptlandia-helper/pom.xml</include>
        <include>scriptlandia-helper/src/**</include>

        <include>scriptlandia-launcher/pom.xml</include>
        <include>scriptlandia-launcher/src/**</include>

        <include>scriptlandia-nailgun/pom.xml</include>
        <include>scriptlandia-nailgun/src/**</include>
      </includes>
    </fileSet>

    <fileSet>
      <directory>languages</directory>
      <outputDirectory>languages</outputDirectory>

      <includes>
        <include>**/pom.xml</include>
        <include>**/language.xml</include>
        <include>**/*.ico</include>
        <include>**/src/**</include>
      </includes>

      <excludes>
        <exclude>**/target/**/pom.xml</exclude>
      </excludes>
    </fileSet>

  </fileSets>

</assembly>
