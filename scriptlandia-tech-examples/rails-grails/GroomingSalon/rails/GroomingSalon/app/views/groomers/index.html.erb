<h1>Listing Groomers</h1>

<%= button_to 'New Groomer', new_groomer_path %>
<br />

<% if !@groomers.empty? %>
  <table>
    <tr>
      <th>Company</th>
      <th>Name</th>
      <th>Notes</th>

      <th colspan="3">Commands</th>
    </tr>

    <% for groomer in @groomers %>
      <tr valign="top" class="<%=cycle('list-line-odd', 'list-line-even')%>">
        <td><%=h groomer.company.name if groomer.company != nil %></td>
        <td><%=h groomer.name %></td>
        <td><%=h groomer.notes %></td>

        <td><%= link_to 'Show', groomer %></td>
        <td><%= link_to 'Edit', edit_groomer_path(groomer) %></td>
        <td><%= link_to 'Delete', groomer, :confirm => 'Are you sure?', :method => :delete %></td>
      </tr>
    <% end %>
  </table>
<% end %>