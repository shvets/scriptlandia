<h1>Listing users</h1>

<%= button_to 'New user', new_user_path %>
<br />

<% if @users.empty? %>
  <h2>We don't have any appointment.</h2>
<% else %>
  <table>
    <tr>
      <th>User Name</th>
      <th>Admin</th>
      <th>Company</th>

      <th colspan="3">Commands</th>
    </tr>

    <% for user in @users %>
      <tr valign="top" class="<%=cycle('list-line-odd', 'list-line-even')%>">
        <td><%=h user.username %></td>
        <td><%=h user.admin %></td>
        <td><%=h user.company.name if user.company != nil %></td>
        <td><%= link_to 'Show', user %></td>
        <td><%= link_to 'Edit', edit_user_path(user) %></td>
        <td><%= link_to 'Delete', user, :confirm => 'Are you sure?', :method => :delete %></td>
      </tr>
    <% end %>
  </table>

<% end %>

