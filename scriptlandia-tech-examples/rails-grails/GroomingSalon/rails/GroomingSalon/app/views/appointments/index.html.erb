<h1>Listing Appointments</h1>

<%= link_to 'New Appointment', new_appointment_path %>
<br />
<br />

<% if !@appointments.empty? %>
  <table border="0">
    <tr>
      <th>Pet Owner</th>
      <th>Pet</th>
      <th>Groomer</th>
      <th>Appointment Date</th>
      <th>Price</th>
      <th colspan="3">Commands</th>
    </tr>

  <% for appointment in @appointments %>
    <tr>
      <td><%=h appointment.pet_owner.name if appointment.pet_owner != nil %></td>
      <td><%=h appointment.pet.name if appointment.pet != nil %></td>
      <td><%=h appointment.groomer.name if appointment.groomer != nil %></td>
      <td><%=h appointment.appointmentDate %></td>
      <td><%=h appointment.price %></td>

      <td><%= link_to 'Show', appointment %></td>
      <td><%= link_to 'Edit', edit_appointment_path(appointment) %></td>
      <td><%= link_to 'Delete', appointment, :confirm => 'Are you sure?', :method => :delete %></td>
    </tr>
  <% end %>
  </table>
<% end %>
