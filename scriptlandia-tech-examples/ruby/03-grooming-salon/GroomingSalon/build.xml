<project name="build" default="run" basedir=".">

  <target name="db.init">
    <exec executable="jrake.bat">
      <arg value="db:drop"/>
    </exec>

    <exec executable="jrake.bat">
      <arg value="db:create"/>
    </exec>

    <exec executable="jrake.bat">
      <arg value="db:migrate"/>
    </exec>
   </target>

   <target name="server">
    <exec executable="jruby.bat">
      <arg value="script/server"/>
    </exec>
   </target>
</project>
