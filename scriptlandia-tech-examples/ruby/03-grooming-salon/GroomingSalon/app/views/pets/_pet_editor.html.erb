  <table border="1">
    <tr>
      <td colspan="3">
        <%= f.error_messages %>
      </td>
    </tr>

    <tr>
      <td>
        <%= f.label :name %>: <%= f.text_field :name %>
      </td>

      <td>
        <%= f.label :breed %>: <%= f.text_field :breed %>
      </td>

      <td>
        <%= f.label :sex %>: <%= f.text_field :sex %>
      </td>
    </tr>

    <tr>

    <tr>
      <td>
        <%= f.label :size %>: <%= f.text_field :size %>
      </td>

      <td>
        <%= f.label :color %>: <%= f.text_field :color %>
      </td>

      <td>
        <%= f.label :'birth Date' %>: <%= f.datetime_select :birthDate %>
      </td>
    </tr>

    <tr>
      <td>
        <%= f.label :'pet Owner' %>: <%= collection_select(:pet, :pet_owner_id, PetOwner.find(:all, :order => "lastName"), :id, :name) %>
