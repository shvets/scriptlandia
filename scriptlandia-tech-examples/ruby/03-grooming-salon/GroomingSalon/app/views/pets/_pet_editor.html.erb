  <%= f.error_messages %>

  <%
    if mode == 'new'
      submitText = "Create"
    else
      submitText = "Update"
    end
  %>

  <table width="100%">
    <tr>
      <td colspan="4">
        <%= f.error_messages %>
      </td>
    </tr>

    <tr>
      <td>
        <%= "Cat or Dog?" %>: <%= select(:pet, :subtype, %w(cat dog)) %>
      </td>

      <td>
        <%= f.label :name %>: <%= f.text_field :name %>
      </td>

      <td>
        <%= f.label :breed %>: <%= f.text_field :breed %>
      </td>

      <td>
        <%= f.label :sex %>: <%= select(:pet, :sex, %w(male female)) %>
      </td>
    </tr>

    <tr>

    <tr>
      <td>
        <%= f.label :size %>: <%= f.text_field :size %>
      </td>

      <td>
        <%= f.label :color %>: <%= f.text_field :color %>
      </td>

      <td>
        <%= f.label :'birth Date' %>: <%= date_select(:pet, :birthDate, :order => [:month, :day, :year])%>
      </td>

      <td></td>
    </tr>

    <tr>
      <td>
        <%= f.label :'pet Owner' %>: 
        <%= collection_select(:pet, :pet_owner_id, PetOwner.find(:all, :order => "lastName"), :id, :name, {}, {:disabled => (params[:pet_owner_id] != nil) }) %>
      </td>

      <td>
        <%= f.label :veterinar %>: <%= f.text_field :veterinar %>
      </td>

      <td>
        <%= f.label :'referred By' %>: <%= f.text_field :referredBy %>
      </td>

      <td></td>
    </tr>

    <tr>
      <td colspan="4">
        <table>
          <tr>
            <td><%= f.label :'medical Problems' %>:</td>
            <td><%= f.label :'special Instructions' %>:</td>
            <td><%= f.label :behavior %>:</td>
          </tr>

          <tr>
            <td><%= f.text_area :medicalProblems, "cols" => 30, "rows" => 20 %></td>
            <td><%= f.text_area :specialInstructions, "cols" => 30, "rows" => 20 %></td>
            <td><%= f.text_area :behavior, "cols" => 30, "rows" => 20 %></td>
          </tr>
        </table>
      </td>
    </tr>

    <tr>
      <td colspan="4">
        <%= f.label :'clip 1' %>: <%= f.text_field :clip1 %>
      </td>
    </tr>

    <tr>
      <td colspan="4">
        <%= f.label :'clip 2' %>: <%= f.text_field :clip2 %>
      </td>
    </tr>

    <tr>
      <td colspan="4">
        <%= f.label :'clip 3' %>: <%= f.text_field :clip3 %>
      </td>
    </tr>

    <tr>
      <td>
        <%= f.submit submitText %>
      </td>
    </tr>
  </table>


