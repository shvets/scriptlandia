<h1>Listing Pets</h1>

<%= link_to 'New Pet', new_pet_path %>
<br />
<br />

<% if @pets.empty? %>
  <h2>We don't have any pets.</h2>
<% else %>

  <table border="0">
    <tr>
      <th>Pet Owner</th>
      <th>Cat or Dog?</th>
      <th>Name</th>
      <th>Breed</th>
      <th>Size</th>
      <th>Sex</th>
      <th>Color</th>
      <th>Birth Date</th>
      <th colspan="5">Commands</th>
    </tr>

  <% for pet in @pets %>
      <tr>
        <td><%=h pet.pet_owner.name %></td>
        <td><%=h pet.subtype%></td>
        <td><%=h pet.name %></td>
        <td><%=h pet.breed %></td>
        <td><%=h pet.size %></td>
        <td><%=h pet.sex %></td>
        <td><%=h pet.color %></td>
        <td><%=h pet.birthDate %></td>

        <td><%= link_to 'Show', pet %></td>
        <td><%= link_to 'Edit', edit_pet_path(pet) %></td>
        <td><%= link_to 'Destroy', pet, :confirm => 'Are you sure?', :method => :delete %></td>
        <td><%= link_to 'Appointments', :controller => "appointments", :action => "index", :pet_id => pet.id %></td>
        <td><%= link_to 'New Appointment', :controller => "appointments", :action => "new", :pet_id => pet.id %></td>
    </tr>
  <% end %>
  </table>

<% end %>

