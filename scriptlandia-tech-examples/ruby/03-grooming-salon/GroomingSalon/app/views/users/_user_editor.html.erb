  <%= f.error_messages %>

  <%
    if mode == 'new'
      submitText = "Create"
    else
      submitText = "Update"
    end
  %>

  <%= f.error_messages %>

  <p>
    <%= f.label :name %><br />
    <%= f.text_field :name %>
  </p>
  <p>
    <%= f.label :admin %><br />
    <%= f.check_box :admin %>
  </p>

  <p>
    <%= f.label :company_id %><br />
    <%= collection_select(:user, :company_id, Company.find(:all, :order => "name"), :id, :name) %>
  </p>

  <p>
    <%= f.submit submitText %>

    <%= link_to 'Cancel', users_path %>
  </p>

